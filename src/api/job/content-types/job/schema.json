{
  "kind": "collectionType",
  "collectionName": "jobs",
  "info": {
    "singularName": "job",
    "pluralName": "jobs",
    "displayName": "Job",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "jobTitle": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "openings": {
      "type": "integer",
      "required": true,
      "min": 1
    },
    "department": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::department.department",
      "inversedBy": "job"
    },
    "reward": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::reward.reward"
    },
    "tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "location": {
      "type": "string",
      "required": true
    },
    "jobType": {
      "type": "enumeration",
      "enum": [
        "Full-time",
        "Part-time",
        "Contract",
        "Internship",
        "Temporary"
      ],
      "required": true
    },
    "workType": {
      "type": "enumeration",
      "enum": [
        "remote",
        "in-office",
        "hybrid"
      ],
      "required": true
    },
    "salaryRange": {
      "type": "string"
    },
    "jobDescription": {
      "type": "richtext",
      "required": true
    },
    "jobRequirements": {
      "type": "richtext",
      "required": true
    },
    "jobExperience": {
      "type": "integer"
    }
  }
}
